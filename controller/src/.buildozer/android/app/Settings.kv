<T1@TextInput>:
	size_hint_y: None
	height: sp(30)

<L1@Label>:
	size_hint_y: None
	size_hint_x: 0.3
	height: sp(30)
	text_size: self.width,None
    halign: 'right'
    valign: 'middle'

<Sep@Label>:
	size_hint_y: None
	height: sp(30)
	text_size: self.width,None
    halign: 'center'
    valign: 'middle'
    markup:True


<L2@Label>:
	size_hint_y:None
	size_hint_x:0.1
	height: sp(30)
	valign: 'top'

<S1@Slider>:
	orientation:'horizontal'
	step:1
	min:0
	max:100




<Settings>:
	size_hint:0.95,0.95
	auto_dismiss:False
	title:'Settings'
	ScrollView:
		size_hint: None,None
		size:self.parent.width,self.parent.height
		do_scroll_x:False
		scroll_timeout:55

		GridLayout:
			cols: 2
			padding: 5
			spacing: 20
			size_hint_y: None
			height: self.minimum_height


			L1:
			Sep:
				text:'[color=aaaaff]NETWORK[/color]'
			L1:
				text:"IP"
			T1:
				id:ip
				input_type:'address'
				multiline:False

			L1:
				text:"UDP port\n (requires app restart)"
			T1:
				id:outgoingport
				input_type:'number'
				multiline:False

			L1:
			Sep:
				text:'[color=aaaaff]AXIS[/color]'

			L1:
				text:"Elevator Trim\n sensitivity"
			BoxLayout:
				orientation:"horizontal"
				L2:
					text:"Min"
				S1:
					id:elevatortrims
				L2:
					text:"Max"

			L1:
				text:"Rudder Trim \n sensitivity"
			BoxLayout:
				orientation:"horizontal"
				L2:
					text:"Min"
				S1:
					id:ruddertrims
				L2:
					text:"Max"

			L1:
				text:"Rudder Auto Center"
			Switch:
				id:rudderautocenter

			L1:
				text:"Brakes Auto disable"
			Switch:
				id:brakesautodisable

			L1:
				text:"Pad Auto center"
			Switch:
				id:padautocenter


			L1:
			Sep:
				text:'[color=aaaaff]BUTTONS[/color]'
			L1:
				text:'Button 1 text'
			T1:
				id:btn1_text
				multiline:False
			L1:
				text:"Button 1 Toggle"
			Switch:
				id:btn1_toggle
			L1:
				text:'Button 2 text'
			T1:
				id:btn2_text
				multiline:False
			L1:
				text:"Button 2 Toggle"
			Switch:
				id:btn2_toggle
			L1:
				text:'Button 3 text'
			T1:
				id:btn3_text
				multiline:False
			L1:
				text:"Button 3 Toggle"
			Switch:
				id:btn3_toggle
			L1:
				text:'Button 4 text'
			T1:
				id:btn4_text
				multiline:False
			L1:
				text:"Button 4 Toggle"
			Switch:
				id:btn4_toggle
			Button:
				size_hint_y: None
				size_hint_x: 0.3
				height: sp(60)
				text: 'Cancel'
				on_press: root.dismiss()
			Button:
				size_hint_y: None
				size_hint_x: 0.3
				height: sp(60)
				text: 'Save & Close'
				on_press: root.save()